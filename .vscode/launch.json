{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express TS",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/index.ts"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal", // ðŸ‘ˆ hiá»‡n log á»Ÿ terminal bÃªn trong VS Code
      "internalConsoleOptions": "openOnSessionStart", // ðŸ‘ˆ tá»± má»Ÿ debug console
      "outputCapture": "std" // ðŸ‘ˆ báº¯t log stdout (console.log, v.v.)
    }
  ]
}
